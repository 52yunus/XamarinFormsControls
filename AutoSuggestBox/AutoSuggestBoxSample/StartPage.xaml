<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoSuggestBoxSample.StartPage" Padding="20">
    <ContentPage.Content>
        <ScrollView>            
           <StackLayout>
                <Label FontSize="24" Text="AutoSuggestBox" TextColor="CornflowerBlue" Margin="0,10" />
                <Button Text="Simple auto-completion" Clicked="SimpleASB_Clicked" HorizontalOptions="CenterAndExpand" />
                <Button Text="Dynamic datalookup" Clicked="DynamicASB_Clicked" HorizontalOptions="CenterAndExpand" />
                <Button Text="Email Completion" Clicked="EmailASB_Clicked" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>